<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lenovo.android191.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="2"
            android:background="@drawable/border"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_weight="1"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="LOCATION :- "/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E32636"
                android:textSize="20sp"
                android:text="Location"/>

        </LinearLayout>



        <LinearLayout
            android:weightSum="2"
            android:background="@drawable/border"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_weight="1"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="CORDINATE :- "/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_cordinate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFBF00"
                android:textSize="20sp"
                android:text="CORDINATE"/>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/border"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_weight="1"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="WEATHER :- "/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#4B5320"
                android:textSize="20sp"
                android:text="Weather"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:background="@drawable/border"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="TEMPERATURE :- "/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF007F"
                android:textSize="20sp"
                android:text="Temperature"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:background="@drawable/border"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="HUMIDITY :- "/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#66FF00"
                android:textSize="20sp"
                android:text="Humidity"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:background="@drawable/border"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="SUNRISE :- "/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_sunrise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#BD33A4"
                android:textSize="20sp"
                android:text="Sunrise"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:background="@drawable/border"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="SUNSET :- "/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_sunset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2A52BE"
                android:textSize="20sp"
                android:text="Sunset"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
